rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Only authenticated users can upload files.
    // Files must be uploaded to a path that includes their own user ID.
    // This rule allows uploads to paths like: /uploads/{userId}/{orderId}/{fileName}
    // We check that the uploaded file path starts with `/uploads/` followed by the user's UID.
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}
